<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrimerFragmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="393dp"
            android:layout_height="532dp" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/constraint_fragmento"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_segundo"
            app:layout_constraintHorizontal_bias="0.9" app:layout_constraintVertical_bias="0.461">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="primero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_primero" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="segundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_segundo" app:layout_constraintStart_toEndOf="@+id/btn_primero"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="@+id/btn_primero"
    />
    <Button
            android:text="tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tercero" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_segundo" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.686"
            app:layout_constraintTop_toTopOf="@+id/btn_segundo"/>
</androidx.constraintlayout.widget.ConstraintLayout>