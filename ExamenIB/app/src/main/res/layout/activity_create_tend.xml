<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateTend">

    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_tend" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.842"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_numero_producto" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_address" android:hint="@string/nombre"
            app:layout_constraintHorizontal_bias="0.478" app:layout_constraintVertical_bias="0.54"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_address"
            app:layout_constraintStart_toStartOf="@+id/txt_numero_producto" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_numero_producto" android:layout_marginTop="164dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/address"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_date"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_ruc" android:layout_marginTop="388dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rb_matriz" android:hint="@string/ruc"
            app:layout_constraintStart_toStartOf="@+id/txt_date" app:layout_constraintEnd_toEndOf="@+id/txt_date"/>
    <RadioButton
            android:text="@string/matriz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_matriz" app:layout_constraintEnd_toEndOf="@+id/txt_ruc"
            app:layout_constraintStart_toStartOf="@+id/txt_ruc" android:layout_marginTop="444dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_save_tend"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txt_date"
            app:layout_constraintStart_toStartOf="@+id/txt_address"
            app:layout_constraintEnd_toEndOf="@+id/txt_address" android:layout_marginTop="276dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_ruc"
            android:hint="@string/openningDay"/>
</android.support.constraint.ConstraintLayout>